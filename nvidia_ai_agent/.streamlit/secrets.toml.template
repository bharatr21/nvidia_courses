# Streamlit Cloud Secrets Configuration
# Copy these to your Streamlit Cloud app secrets dashboard

# Required: OpenAI Configuration
OPENAI_API_KEY = "sk-your-openai-api-key-here"
OPENAI_MODEL = "gpt-4"

# Optional: NVIDIA API (if you have access)
NVIDIA_API_KEY = "your-nvidia-api-key-here"

# Agent Configuration  
AGENT_NAME = "NVIDIA AI Assistant"
MAX_CONVERSATION_HISTORY = "10"

# Vector Database Configuration (Cloud optimized)
CHROMADB_PERSIST_DIRECTORY = "./data/chromadb"
EMBEDDING_MODEL = "sentence-transformers/all-MiniLM-L6-v2"

# Web Search Configuration
MAX_SEARCH_RESULTS = "5" 
SEARCH_TIMEOUT = "30"
NVIDIA_DEV_BLOG_RSS = "https://developer.nvidia.com/blog/feed"
NVIDIA_BLOG_RSS = "https://blogs.nvidia.com/feed"

# Webhook Configuration for Cloud
# Note: Streamlit Cloud doesn't support separate webhook servers
# Use external webhook service instead
WEBHOOK_SECRET = "your-webhook-secret-here"
# This should be your external webhook service URL
EXTERNAL_WEBHOOK_URL = "https://your-webhook-service.com/webhook"

# Cloud-specific settings
STREAMLIT_CLOUD = "true"
CLOUD_DEPLOYMENT = "true"
